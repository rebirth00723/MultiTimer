<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00111111"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CD535353"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/topTitleTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#414141"
                android:gravity="center"
                android:text="@string/topTitleTxt"
                android:textColor="#FAFAFA"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timerYellowTxt"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/count_y"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/timerRedTxt"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/count_r"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FAFAFA"
                    android:textSize="16sp" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addBtn1"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:background="@drawable/addbtn"
                    android:text="@string/addTimerBtn"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <GridView
                    android:id="@+id/TimerGrid1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="5dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="5"
                    android:verticalSpacing="5dp" >

                </GridView>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#F227FFD6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addBtn2"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:background="@drawable/addbtn"
                    android:text="@string/addTimerBtn"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <GridView
                    android:id="@+id/TimerGrid2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="5dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="5"
                    android:verticalSpacing="5dp" />

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F227FFD6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addBtn3"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:background="@drawable/addbtn"
                    android:text="@string/addTimerBtn"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <GridView
                    android:id="@+id/TimerGrid3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="5dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="5"
                    android:verticalSpacing="5dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>